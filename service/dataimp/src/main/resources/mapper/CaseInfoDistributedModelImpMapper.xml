<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.fintecher.pangolin.dataimp.mapper.CaseInfoDistributedModelImpMapper">


    <update id="signExceptionCase">
        update case_info_distributed set exception_flag = 1, exception_check_time = now(), exception_type = 1112
        where
        <if test="list != null and list.size()>0">
            id IN
            <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
    </update>
</mapper>